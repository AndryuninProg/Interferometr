<UserControl x:Class="Interferometr.Buttons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interferometr"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="250"
             Background="#ffffcc"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Margin="15" Content="Пуск" FontSize="16" />
        <Button Grid.Column="0" Grid.Row="1" Margin="15" Content="Стоп" FontSize="16"/>
        <Button Grid.Column="1" Grid.Row="0" Margin="15" Content="100 быстро" FontSize="16"/>
        <Button Grid.Column="1" Grid.Row="1" Margin="15" Content="Очистить" FontSize="16"/>
    </Grid>
</UserControl>
